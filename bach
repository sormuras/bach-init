#!/usr/bin/env bash

if [[ $1 == 'boot' ]]; then
  shift 1
  jshell --module-path .bach/bin --add-modules ALL-MODULE-PATH,ALL-SYSTEM .bach/bin/bach.jshell "$@"
  exit $?
fi

if [[ $1 == 'clean' ]]; then
  rm -rf .bach/out
  exit $?
fi

if [[ $1 == 'init' ]]; then
  if [[ -z $2 ]]; then
    echo "Usage: bach init SLUG"
    exit 1
  fi
  jshell -R-Dbach-slug="$2" https://git.io/bach-init
  exit $?
fi

#JAVA_LAUNCHER_ARGUMENTS=--module-path .bach/bin --add-modules=ALL-MODULE-PATH --add-modules ALL-DEFAULT

if [[ -f ".bach/src/$1.java" ]]; then
  PROGRAM=".bach/src/$1.java"
  shift 1
  java --module-path .bach/bin --add-modules=ALL-MODULE-PATH --add-modules ALL-DEFAULT "$PROGRAM" "$@"
  exit $?
fi

if [[ -f "$1" ]]; then
  java --module-path .bach/bin --add-modules=ALL-MODULE-PATH --add-modules ALL-DEFAULT "$@"
  exit $?
fi

java --module-path .bach/bin --add-modules=ALL-MODULE-PATH --add-modules ALL-DEFAULT --module com.github.sormuras.bach "$@"
exit $?
